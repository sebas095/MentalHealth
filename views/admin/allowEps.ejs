<form action="/users/<%= session.user.id %>/root/allow?_method=put" method="post" onsubmit="return allowEps(this);">
  <div class="row center">
    <label><h3>EPS</h3></label>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <label>NIT </label>
      <input type="text" name="nit" disabled value="<%= allowUser.documentNumber %>">
      <input type="hidden" name="numDocument" value="<%= allowUser.documentNumber %>">
    </div>
    <div class="input-field col l6">
      <label>Nombre o Razón Social </label>
      <input type="text" name="name" disabled value="<%= allowUser.names %>">
      <input type="hidden" name="names" value="<%= allowUser.names %>">
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <label>Correo </label>
      <input type="text" name="correo" disabled value="<%= allowUser.email %>">
    </div>
    <div class="input-field col l6">
      <label>Teléfono </label>
      <input type="text" name="telefono" disabled value="<%= allowUser.epsPhone %>">
    </div>
  </div>
  <div class="row">
    <div class="input-field col l12">
      <label>Dirreción </label>
      <input type="text" name="direccion" disabled value="<%= allowUser.address %>">
    </div>
  </div>
  <div class="row">
    <h4>Persona Responsable</h4>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <label>Tipo de Documento</label>
      <% var dt = (allowUser.documentType).split('-') %>
      <% for (var i in dt) { %>
        <% dt[i] = (dt[i][0]).toUpperCase() + dt[i].slice(1) %>
      <% } %>
      <% allowUser.documentType = dt.join(" ") %>
      <input type="text" name="numDocument" disabled value="<%= allowUser.documentType %>">
    </div>
    <div class="input-field col l6">
      <label>N° de Documento </label>
      <input type="text" name="numDocumento" disabled value="<%= allowUser.documentNumberPerson %>">
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <label>Nombre </label>
      <input type="text" name="nombre" disabled value="<%= allowUser.namesPerson %>">
    </div>
    <div class="input-field col l6">
      <label>Apellidos </label>
      <input type="text" name="apellidos" disabled value="<%= allowUser.lastnames %>">
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <% allowUser.gender = (allowUser.gender[0]).toUpperCase() + allowUser.gender.slice(1) %>
      <label>Género</label>
      <input type="text" name="gender" disabled value="<%= allowUser.gender %>">
    </div>
    <div class="input-field col l6">
      <label>Telefono </label>
      <input type="text" name="telefono" disabled value="<%= allowUser.phone %>">
    </div>
  </div>
  <div class="row">
    <label>EPS</label>
    <div>
      <p>
        <input type="checkbox" class="filled-in" name="aprobarEps" value="aprobar-eps" id="aprobada-check">
        <label for="aprobada-check">Aprobar</label>
      </p>
      <p>
        <input type="checkbox" class="filled-in" name="reprobarEps" value="reprobar-eps" id="reprobada-check">
        <label for="reprobada-check">Rechazar</label>
      </p>
    </div>
  </div>
  <div class="row center">
    <input class="btn waves-effect waves-light cyan darken-2" type="submit" name="enviar" value="ACEPTAR">
  </div>
</form>
