<div class="row">
  <hr>
  <label><h4>REGISTRO PACIENTES, MÉDICOS GENERALES Y ESPECIALISTAS</label></h4>
</div>
<div class="row">
  <div class="col l6">
    <label >Tipo de Documento </label>
    <select name="typeDocument">
      <option value="cédula-de-ciudadanía">Cédula de Ciudadanía</option>
      <option value="cédula-de-extranjería">Cédula de Extranjería</option>
      <option value="pasaporte">Pasaporte</option>
      <option value="id">Id</option>
    </select>
  </div>
  <div class="input-field col l6">
    <input type="text" name="numDocument" id="numDocumento" class="validate">
    <label for="numDocumento">N° de Documento </label>
  </div>
</div>
<div class="row">
  <div class="input-field col l6">
    <input type="text" name="names" id="nombre" pattern="[a-zA-Z ]+" class="validate">
    <label for="nombre">Nombres </label>
  </div>
  <div class="input-field col l6">
    <input type="text" name="lastnames" id="apellidos" pattern="[a-zA-Z ]+" class="validate">
    <label for="apellidos">Apellidos </label>
  </div>
</div>
<div class="row">
  <div class="col l6">
    <label >Género </label>
    <select name="gender" class="validate">
      <option value="masculino">Masculino</option>
      <option value="femenino">Femenino</option>
    </select>
  </div>
  <div class="col l6">
    <label for="nacimiento">Fecha de Nacimiento </label>
    <input type="date" name="birthdate" class="validate"><br><br>
  </div>
</div>
<div class="row">
  <div class="input-field col l6">
    <input type="text" name="mail" id="correo"
      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" class="validate">
    <label for="correo">Correo </label>
  </div>
  <div class="input-field col l6">
    <input type="text" name="phone" id="telefono" pattern="[0-9]+" class="validate">
    <label for="telefono">Telefono </label>
  </div>
</div>
<div class="row">
  <div class="input-field col l6">
    <input type="text" name="address" id="direccion" class="validate">
    <label for="direccion">Dirección </label>
  </div>
  <div class="input-field col l6">
    <input type="text" name="epsRelated" id="eps-asociada" pattern="[a-zA-Z ]+" class="validate">
    <label for="eps-asociada">EPS Asociada </label>
  </div>
</div>
<div class="row">
  <div class="col l12">
    <label>Roles </label>
    <div>
      <p>
        <input type="checkbox" class="filled-in" name="paciente" value="paciente" id="paciente-check">
        <label for="paciente-check">Paciente</label>
      </p>
      <p>
        <input type="checkbox" class="filled-in" name="medicoGeneral" value="medicoGeneral" id="medicogeneral-check">
        <label for="medicogeneral-check">Médico General</label>
      </p>
      <p>
        <input type="checkbox" class="filled-in" name="medicoEspecialista" value="medicoEspecialista" id="medicoespecialista-check">
        <label for="medicoespecialista-check">Médico Especialista</label>
      </p>
    </form>
  </div>
</div>
<div class="row">
  <div class="input-field col l6">
    <input type="password" name="pwd" id="pwdUser"
      pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="validate">
    <label for="pwdUser">Nueva Contraseña </label>
  </div>
  <div class="input-field col l6">
    <input type="password" name="cpwd" id="cpwdUser"
      pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="validate">
    <label for="cpwdUser">Confirmar Contraseña </label>
  </div>
</div>
