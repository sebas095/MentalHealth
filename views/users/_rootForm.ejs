<div class="container">
  <div class="row">
    <hr>
    <label><h4>ROOT DEL SISTEMA</label></h4>
  </div>
  <div class="row">
    <div class="col l6">
      <label >Tipo de Documento </label>
      <select name="typeDocument" required="" aria-required="true">
        <option value="cédula-de-ciudadanía">Cedula de Ciudadanía</option>
        <option value="cédula-de-extranjería">Cédula de Extranjería</option>
        <option value="pasaporte">Pasaporte</option>
        <option value="id">Id</option>
      </select>
    </div>
    <div class="input-field col l6">
      <input type="text" name="numDocument" id="numDocumento" required="" aria-required="true" class="validate">
      <label for="numDocumento">N° de Documento </label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <input type="text" name="names" id="nombre" pattern="[a-zA-Z ]+" required="" aria-required="true" class="validate">
      <label for="nombre">Nombres </label>
    </div>
    <div class="input-field col l6">
      <input type="text" name="lastnames" id="apellidos" pattern="[a-zA-Z ]+" required="" aria-required="true" class="validate">
      <label for="apellidos">Apellidos </label>
    </div>
  </div>
  <div class="row">
    <div class="col l6">
      <label >Género </label>
      <select name="gender" required="" aria-required="true" class="validate">
        <option value="masculino">Masculino</option>
        <option value="femenino">Femenino</option>
      </select>
    </div>
    <div class="col l6">
      <label for="nacimiento">Fecha de Nacimiento </label>
      <input type="date" name="birthdate" required="" aria-required="true" class="validate"><br><br>
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <input type="text" name="mail" id="correo"
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required="" aria-required="true" class="validate">
      <label for="correo">Correo </label>
    </div>
    <div class="input-field col l6">
      <input type="text" name="phone" id="telefono" pattern="[0-9]+" required="" aria-required="true" class="validate">
      <label for="telefono">Telefono </label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col l12">
      <input type="text" name="address" id="direccion" required="" aria-required="true" class="validate">
      <label for="direccion">Dirección </label>
    </div>
  </div>
  <div class="row">
    <div class="input-field col l6">
      <input type="password" name="pwd" id="pwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required="" aria-required="true" class="validate">
      <label for="pwd">Contraseña </label>
    </div>
    <div class="input-field col l6">
      <input type="password" name="cpwd" id="cpwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required="" aria-required="true" class="validate">
      <label for="cpwd">Confirmar Contraseña </label>
    </div>
  </div>
</div>
