<form action="/login" method="post">
  <div class="row center">
    <h2>Login</h2>
  </div>
  <div class="row">
    <div class="input-field col l6 col s12">
      <label for="user">Usuario </label>
      <input type="text" name="user" autocomplete="on" required="" aria-required="true">
    </div>
    <div class="input-field col l6 col s12">
      <label for="pwd">Contraseña </label>
      <input type="password" name="pwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required="" aria-required="true">
      <a href="#">¿Has olvidado tu contraseña?</a><br><br>
    </div>
  </div>
  <div class="row center">
    <input class="btn waves-effect waves-light" type="submit" name="login" value="Iniciar Sesión">
  </div>
</form>
