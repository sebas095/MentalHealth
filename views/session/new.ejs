<form action="/login" method="post">
  <div class="row center">
    <br><br>
  </div>
  <div class="row">
    <div class="input-field col l6 col s12">
      <i class="material-icons prefix">account_circle</i>
      <input type="text" id="user" name="user" class="validate" autocomplete="on" required="" aria-required="true">
      <label for="user">Usuario </label>
    </div>
    <div class="input-field col l6 col s12">
      <i class="material-icons prefix">lock</i>
      <input type="password" id="pwd" name="pwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="validate" required="" aria-required="true">
      <label for="pwd">Contraseña </label>
      <a href="/account/recovery">¿Has olvidado tu contraseña?</a><br><br>
    </div>
  </div><br>
  <div class="row center">
    <input class="btn waves-effect waves-light cyan darken-2" type="submit" name="login" value="Iniciar Sesión">
  </div>
</form>
