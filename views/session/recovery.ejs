<form action="/account/newPassword?_method=put" method="post" onsubmit="return comparePass(this);">
  <div class="row center">
    <br><br>
  </div>
  <div class="row">
    <div class="col l3">&nbsp;</div>
    <div class="input-field col l6 col s12">
      <label for="user">Usuario </label>
      <input type="text" id="user" name="user" class="validate" autocomplete="off" required="" aria-required="true">
    </div>
  </div><br>
  <div class="row">
    <div class="col l3">&nbsp;</div>
    <div class="input-field col l6 col s12">
      <label for="pwd">Nueva Contraseña </label>
      <input type="password" id="pwd" name="pwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="validate" required="" aria-required="true">
    </div>
  </div>
  <div class="row">
    <div class="col l3">&nbsp;</div>
    <div class="input-field col l6 col s12">
      <label for="cpwd">Confirmar Contraseña </label>
      <input type="password" id="cpwd" name="cpwd"
        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="validate" required="" aria-required="true">
    </div>
  </div>
  <div class="row center">
    <input class="btn waves-effect waves-light" type="submit" name="login" value="GUARDAR">
  </div>
</form>
